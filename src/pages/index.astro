---
import Layout from '../layouts/Layout.astro';
import Book from '../components/Book.astro';

const books = await fetch('https://books-967097485204.europe-southwest1.run.app').then((response) => response.json());
---

<Layout>
	<h1 class="flex items-center justify-center relative top-15 text-2xl font-bold  text-[#45BEAA]">Our Bestsellers</h1>

	<div class="flex justify-center relative items-center">
		<div class="mt-20 grid grid-cols-3 gap-5  ">
			{books.map((data) => <Book title={data.title} description={data.author} img={data.img} isbn={data.isbn} price={data.price}></Book>)}
		</div>
	</div>
</Layout>
