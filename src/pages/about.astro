---
import Layout from '../layouts/Layout.astro';
import * as post from './posts/gabriel.md';

---

<Layout>
    <div class="flex items-center justify-center h-screen">
    <div class="max-w-180 h-180">
        <div class="flex-col justify-center items-center">
            <div class="flex justify-center items-center">
                <img src={post.frontmatter.profilePic} class="w-50 h-50 rounded-full object-cover"></img>
            </div>
            <div class="flex justify-center items-center">
                <div class="flex-col justify-center items-center">
                    <h1 class="text-4xl font-bold mt-5">{post.frontmatter.title}</h1>
                    <h2 class="h2 mt-1 font-medium text-2xl">{post.frontmatter.position}</h2>
                </div>
            </div>

            <div class="mt-5 prose lg:prose-l">
                <post.Content/>
            </div>
        </div>
    </div>
    </div>
</Layout>

